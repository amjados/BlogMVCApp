@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3 mb-0">Admin Dashboard</h1>
                <div class="text-muted">
                    Welcome, <strong>@ViewBag.AdminName</strong>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-md-3 col-sm-6 mb-3">
            <div class="card bg-primary text-white h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <h2 class="mb-0">@ViewBag.TotalUsers</h2>
                            <p class="mb-0">Total Users</p>
                        </div>
                        <div class="ms-3">
                            <i class="fas fa-users fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3 col-sm-6 mb-3">
            <div class="card bg-success text-white h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <h2 class="mb-0">@ViewBag.TotalPosts</h2>
                            <p class="mb-0">Total Posts</p>
                        </div>
                        <div class="ms-3">
                            <i class="fas fa-file-alt fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3 col-sm-6 mb-3">
            <div class="card bg-info text-white h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <h2 class="mb-0">@ViewBag.TotalPublishedPosts</h2>
                            <p class="mb-0">Published Posts</p>
                        </div>
                        <div class="ms-3">
                            <i class="fas fa-globe fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3 col-sm-6 mb-3">
            <div class="card bg-warning text-white h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <h2 class="mb-0">@ViewBag.TotalComments</h2>
                            <p class="mb-0">Total Comments</p>
                        </div>
                        <div class="ms-3">
                            <i class="fas fa-comments fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Admin Actions -->
        <div class="col-lg-4 mb-4">
            <div class="card h-100">
                <div class="card-header bg-dark text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-cog me-2"></i>Admin Actions
                    </h5>
                </div>
                <div class="card-body">
                    <div class="list-group list-group-flush">
                        <a href="@Url.Action("UserManagement", "Admin")" class="list-group-item list-group-item-action d-flex align-items-center">
                            <i class="fas fa-users text-primary me-3"></i>
                            <div>
                                <h6 class="mb-1">User Management</h6>
                                <small class="text-muted">Manage user accounts, roles, and permissions</small>
                            </div>
                        </a>
                        
                        <a href="@Url.Action("RoleManagement", "Admin")" class="list-group-item list-group-item-action d-flex align-items-center">
                            <i class="fas fa-user-tag text-success me-3"></i>
                            <div>
                                <h6 class="mb-1">Role Management</h6>
                                <small class="text-muted">Create, edit, and delete user roles</small>
                            </div>
                        </a>
                        
                        <a href="@Url.Action("Index", "Cache")" class="list-group-item list-group-item-action d-flex align-items-center">
                            <i class="fas fa-memory text-info me-3"></i>
                            <div>
                                <h6 class="mb-1">Cache Management</h6>
                                <small class="text-muted">Manage application cache and performance</small>
                            </div>
                        </a>

                        <a href="@Url.Action("ViewAllPosts", "Home")" class="list-group-item list-group-item-action d-flex align-items-center">
                            <i class="fas fa-file-alt text-warning me-3"></i>
                            <div>
                                <h6 class="mb-1">Content Management</h6>
                                <small class="text-muted">Manage blog posts and content</small>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Recent Activity -->
        <div class="col-lg-8 mb-4">
            <div class="card h-100">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-clock me-2"></i>Recent Posts Activity
                    </h5>
                </div>
                <div class="card-body">
                    @if (ViewBag.RecentPosts != null && ((IEnumerable<dynamic>)ViewBag.RecentPosts).Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead>
                                    <tr>
                                        <th>Title</th>
                                        <th>Author</th>
                                        <th>Category</th>
                                        <th>Status</th>
                                        <th>Created</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (dynamic post in ViewBag.RecentPosts)
                                    {
                                        <tr>
                                            <td>
                                                <div class="fw-bold">@post.Title</div>
                                            </td>
                                            <td>@post.AuthorName</td>
                                            <td>
                                                <span class="badge bg-secondary">@post.CategoryName</span>
                                            </td>
                                            <td>
                                                @if (post.Status == "Published")
                                                {
                                                    <span class="badge bg-success">Published</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-warning">Draft</span>
                                                }
                                            </td>
                                            <td>
                                                <small class="text-muted">
                                                    @DateTime.Parse(post.CreatedAt.ToString()).ToString("MMM dd, yyyy")
                                                </small>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center text-muted py-4">
                            <i class="fas fa-inbox fa-3x mb-3"></i>
                            <p>No recent posts found.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Stats -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-secondary text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-chart-line me-2"></i>System Overview
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-md-3 mb-3">
                            <div class="border rounded p-3">
                                <h4 class="text-primary mb-1">@ViewBag.TotalCategories</h4>
                                <small class="text-muted">Categories</small>
                            </div>
                        </div>
                        <div class="col-md-3 mb-3">
                            <div class="border rounded p-3">
                                <h4 class="text-success mb-1">@(ViewBag.TotalPublishedPosts ?? 0)</h4>
                                <small class="text-muted">Published</small>
                            </div>
                        </div>
                        <div class="col-md-3 mb-3">
                            <div class="border rounded p-3">
                                <h4 class="text-warning mb-1">@((ViewBag.TotalPosts ?? 0) - (ViewBag.TotalPublishedPosts ?? 0))</h4>
                                <small class="text-muted">Drafts</small>
                            </div>
                        </div>
                        <div class="col-md-3 mb-3">
                            <div class="border rounded p-3">
                                <h4 class="text-info mb-1">@ViewBag.TotalComments</h4>
                                <small class="text-muted">Comments</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Add Font Awesome for icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

<style>
    .card {
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        border: 1px solid rgba(0, 0, 0, 0.125);
    }
    
    .card-header {
        border-bottom: 1px solid rgba(0, 0, 0, 0.125);
    }
    
    .list-group-item-action:hover {
        background-color: #f8f9fa;
        transform: translateX(5px);
        transition: all 0.2s ease;
    }
    
    .table-hover tbody tr:hover {
        background-color: rgba(0, 0, 0, 0.075);
    }
</style>