@{
    ViewData["Title"] = "Welcome Dashboard";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="jumbotron bg-primary text-white text-center mb-4">
                <h1 class="display-4">Welcome back, @(User.Identity?.Name ?? "User")!</h1>
                <p class="lead">You have successfully logged into your dashboard. Explore the features below to get started.</p>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <i class="fas fa-edit fa-3x text-primary mb-3"></i>
                    <h5 class="card-title">Create Content</h5>
                    <p class="card-text">Start writing your blog posts and share your thoughts with the world.</p>
                    <a href="@Url.Action("WritePost", "Home")" class="btn btn-primary">Write Post</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <i class="fas fa-chart-bar fa-3x text-success mb-3"></i>
                    <h5 class="card-title">Analytics</h5>
                    <p class="card-text">Track your blog performance and see how your content is performing.</p>
                    <a href="@Url.Action("ViewStats", "Home")" class="btn btn-success">View Stats</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <i class="fas fa-cog fa-3x text-warning mb-3"></i>
                    <h5 class="card-title">Settings</h5>
                    <p class="card-text">Customize your profile and manage your account preferences.</p>
                    <a href="#" class="btn btn-warning" onclick="alert('Account Settings feature coming soon!')">Manage Account</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5><i class="fas fa-clock"></i> Recent Activity</h5>
                </div>
                <div class="card-body">
                    <div class="list-group list-group-flush">
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="mb-1">Welcome to BlogMVC!</h6>
                                <p class="mb-1">You've successfully logged in to your account.</p>
                                <small class="text-muted">Just now</small>
                            </div>
                            <span class="badge bg-primary text-white">New</span>
                        </div>
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="mb-1">Account Created</h6>
                                <p class="mb-1">Your account has been set up successfully.</p>
                                <small class="text-muted">Today</small>
                            </div>
                            <span class="badge bg-success text-white">Complete</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5><i class="fas fa-user"></i> Quick Info</h5>
                </div>
                <div class="card-body">
                    <p><strong>Email:</strong> @(User.Identity?.Name ?? "Unknown")</p>
                    <p><strong>Role:</strong>
                        @if (User.IsInRole("Admin"))
                        {
                            <span class="badge bg-danger text-white">Administrator</span>
                        }
                        else if (User.IsInRole("Editor"))
                        {
                            <span class="badge bg-warning text-dark">Editor</span>
                        }
                        else if (User.IsInRole("Author"))
                        {
                            <span class="badge bg-info text-white">Author</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary text-white">User</span>
                        }
                    </p>
                    <p><strong>Login Time:</strong> @DateTime.Now.ToString("MMM dd, yyyy HH:mm")</p>
                    <hr>
                    <div class="d-grid gap-2">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-outline-primary btn-sm">Back to Home</a>
                        <form asp-area="" asp-controller="Home" asp-action="Logout" method="post" class="d-inline">
                            <button type="submit" class="btn btn-outline-danger btn-sm w-100">Logout</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5><i class="fas fa-newspaper"></i> Latest Blog Posts</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <div class="media">
                                <div class="media-body">
                                    <h6 class="mt-0">Getting Started with ASP.NET Core MVC</h6>
                                    <p class="text-muted">Learn the fundamentals of ASP.NET Core MVC and create your first web application...</p>
                                    <small class="text-muted">Published 15 days ago • 1,247 views</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="media">
                                <div class="media-body">
                                    <h6 class="mt-0">Entity Framework Core Best Practices</h6>
                                    <p class="text-muted">Essential best practices for Entity Framework Core to build performant applications...</p>
                                    <small class="text-muted">Published 10 days ago • 892 views</small>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="text-center">
                        <a href="@Url.Action("ViewAllPosts", "Home")" class="btn btn-outline-primary">View All Posts</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .jumbotron {
        padding: 2rem 1rem;
        margin-bottom: 2rem;
        border-radius: 0.5rem;
    }

    .card {
        border: none;
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        transition: all 0.15s ease-in-out;
    }

    .card:hover {
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
        transform: translateY(-2px);
    }

    .media {
        border-left: 3px solid #007bff;
        padding-left: 1rem;
    }

    .list-group-item {
        border: none;
        border-bottom: 1px solid #dee2e6;
    }

    .badge {
        font-size: 0.75em;
        font-weight: bold;
        padding: 0.375rem 0.75rem;
    }

    .badge.bg-danger {
        background-color: #dc3545 !important;
        color: white !important;
    }

    .badge.bg-warning {
        background-color: #ffc107 !important;
        color: #212529 !important;
    }

    .badge.bg-info {
        background-color: #0dcaf0 !important;
        color: white !important;
    }

    .badge.bg-secondary {
        background-color: #6c757d !important;
        color: white !important;
    }

    .badge.bg-primary {
        background-color: #0d6efd !important;
        color: white !important;
    }

    .badge.bg-success {
        background-color: #198754 !important;
        color: white !important;
    }
</style>