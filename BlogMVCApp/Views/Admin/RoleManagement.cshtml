@model IEnumerable<dynamic>
@{
    ViewData["Title"] = "Role Management";
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3">Role Management</h1>
        <div class="d-flex align-items-center">
            <a href="@Url.Action("CreateRole")" class="btn btn-success me-3">
                <i class="fas fa-plus me-1"></i>Create New Role
            </a>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item">
                        <a href="@Url.Action("AdminLandPage", "Home")">Admin Dashboard</a>
                    </li>
                    <li class="breadcrumb-item active">Role Management</li>
                </ol>
            </nav>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-header bg-success text-white">
            <h5 class="card-title mb-0">
                <i class="fas fa-user-tag me-2"></i>System Roles
            </h5>
        </div>
        <div class="card-body">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Role Name</th>
                                <th>Description</th>
                                <th>Users Assigned</th>
                                <th>Created Date</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (dynamic role in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="fw-bold">@role.Name</div>
                                    </td>
                                    <td>
                                        @(!string.IsNullOrEmpty(role.Description) ? role.Description : "No description")
                                    </td>
                                    <td>
                                        <span class="badge bg-info">@role.UserCount user(s)</span>
                                    </td>
                                    <td>
                                        <small class="text-muted">
                                            @DateTime.Parse(role.CreatedAt.ToString()).ToString("MMM dd, yyyy")
                                        </small>
                                    </td>
                                    <td>
                                        @{
                                            string roleName = role.Name.ToString();
                                        }
                                        @if (roleName != "Admin" && roleName != "User")
                                        {
                                            <form method="post" action="@Url.Action("DeleteRole")" class="d-inline">
                                                <input type="hidden" name="roleId" value="@role.Id" />
                                                <button type="submit" class="btn btn-sm btn-outline-danger" 
                                                        title="Delete Role" onclick="return confirm('Are you sure you want to delete this role?')">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                                @Html.AntiForgeryToken()
                                            </form>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">System Role</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center text-muted py-5">
                    <i class="fas fa-user-tag fa-3x mb-3"></i>
                    <p>No roles found.</p>
                </div>
            }
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">