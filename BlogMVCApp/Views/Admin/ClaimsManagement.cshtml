@{
    ViewData["Title"] = "Claims Management";
    var user = ViewBag.User as BlogMVCApp.Models.ApplicationUser;
    var userClaims = ViewBag.UserClaims as IList<System.Security.Claims.Claim>;
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3">Claims Management</h1>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="@Url.Action("AdminLandPage", "Home")">Admin Dashboard</a>
                </li>
                <li class="breadcrumb-item">
                    <a href="@Url.Action("UserManagement")">User Management</a>
                </li>
                <li class="breadcrumb-item active">Claims Management</li>
            </ol>
        </nav>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- User Information -->
    <div class="card mb-4">
        <div class="card-header bg-info text-white">
            <h5 class="card-title mb-0">
                <i class="fas fa-user me-2"></i>User Information
            </h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <p><strong>Name:</strong> @(user?.FullName ?? "Not Set")</p>
                    <p><strong>Email:</strong> @user?.Email</p>
                </div>
                <div class="col-md-6">
                    <p><strong>Username:</strong> @user?.UserName</p>
                    <p><strong>Created:</strong> @user?.CreatedAt.ToString("MMM dd, yyyy")</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Add New Claim -->
        <div class="col-lg-4 mb-4">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-plus me-2"></i>Add New Claim
                    </h5>
                </div>
                <div class="card-body">
                    <form method="post" action="@Url.Action("AddClaim")">
                        <input type="hidden" name="userId" value="@user?.Id" />
                        
                        <div class="mb-3">
                            <label for="claimType" class="form-label">Claim Type</label>
                            <input type="text" class="form-control" id="claimType" name="claimType" 
                                   placeholder="e.g., permission, role, department" required>
                            <div class="form-text">The type/category of the claim</div>
                        </div>
                        
                        <div class="mb-3">
                            <label for="claimValue" class="form-label">Claim Value</label>
                            <input type="text" class="form-control" id="claimValue" name="claimValue" 
                                   placeholder="e.g., read, write, admin" required>
                            <div class="form-text">The specific value for this claim</div>
                        </div>
                        
                        <button type="submit" class="btn btn-success w-100">
                            <i class="fas fa-plus me-1"></i>Add Claim
                        </button>
                        @Html.AntiForgeryToken()
                    </form>
                </div>
            </div>

            <!-- Common Claims Quick Add -->
            <div class="card mt-3">
                <div class="card-header bg-secondary text-white">
                    <h6 class="card-title mb-0">Quick Add Common Claims</h6>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <button class="btn btn-outline-primary btn-sm" onclick="addCommonClaim('permission', 'blog:write')">Blog Write Permission</button>
                        <button class="btn btn-outline-primary btn-sm" onclick="addCommonClaim('permission', 'blog:publish')">Blog Publish Permission</button>
                        <button class="btn btn-outline-primary btn-sm" onclick="addCommonClaim('permission', 'user:manage')">User Management</button>
                        <button class="btn btn-outline-primary btn-sm" onclick="addCommonClaim('department', 'IT')">IT Department</button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Existing Claims -->
        <div class="col-lg-8 mb-4">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-key me-2"></i>Current Claims (@(userClaims?.Count ?? 0))
                    </h5>
                </div>
                <div class="card-body">
                    @if (userClaims != null && userClaims.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Claim Type</th>
                                        <th>Claim Value</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var claim in userClaims)
                                    {
                                        <tr>
                                            <td>
                                                <span class="badge bg-secondary">@claim.Type</span>
                                            </td>
                                            <td>
                                                <code>@claim.Value</code>
                                            </td>
                                            <td>
                                                <form method="post" action="@Url.Action("RemoveClaim")" class="d-inline">
                                                    <input type="hidden" name="userId" value="@user?.Id" />
                                                    <input type="hidden" name="claimType" value="@claim.Type" />
                                                    <input type="hidden" name="claimValue" value="@claim.Value" />
                                                    <button type="submit" class="btn btn-sm btn-outline-danger" 
                                                            title="Remove Claim" onclick="return confirm('Are you sure you want to remove this claim?')">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                    @Html.AntiForgeryToken()
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center text-muted py-4">
                            <i class="fas fa-key fa-3x mb-3"></i>
                            <p>No claims assigned to this user.</p>
                            <small>Use the form on the left to add claims.</small>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="text-center mt-4">
        <a href="@Url.Action("UserManagement")" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-1"></i>Back to User Management
        </a>
    </div>
</div>

<script>
    function addCommonClaim(type, value) {
        document.getElementById('claimType').value = type;
        document.getElementById('claimValue').value = value;
    }
</script>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">