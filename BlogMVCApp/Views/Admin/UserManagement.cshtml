@model IEnumerable<dynamic>
@{
    ViewData["Title"] = "User Management";
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3">User Management</h1>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="@Url.Action("AdminLandPage", "Home")">Admin Dashboard</a>
                </li>
                <li class="breadcrumb-item active">User Management</li>
            </ol>
        </nav>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-header bg-primary text-white">
            <h5 class="card-title mb-0">
                <i class="fas fa-users me-2"></i>System Users
            </h5>
        </div>
        <div class="card-body">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Username</th>
                                <th>Created Date</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (dynamic user in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="fw-bold">
                                            @(!string.IsNullOrEmpty(user.FirstName) || !string.IsNullOrEmpty(user.LastName) 
                                                ? $"{user.FirstName} {user.LastName}".Trim() 
                                                : "Not Set")
                                        </div>
                                    </td>
                                    <td>
                                        @user.Email
                                        @if (!user.EmailConfirmed)
                                        {
                                            <small class="text-warning">
                                                <i class="fas fa-exclamation-triangle ms-1" title="Email not confirmed"></i>
                                            </small>
                                        }
                                    </td>
                                    <td>@user.UserName</td>
                                    <td>
                                        <small class="text-muted">
                                            @DateTime.Parse(user.CreatedAt.ToString()).ToString("MMM dd, yyyy")
                                        </small>
                                    </td>
                                    <td>
                                        @if (user.LockoutEnd != null && DateTimeOffset.Parse(user.LockoutEnd.ToString()) > DateTimeOffset.UtcNow)
                                        {
                                            <span class="badge bg-danger">Locked Out</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success">Active</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a href="@Url.Action("EditUser", new { id = user.Id })" 
                                               class="btn btn-sm btn-outline-primary" title="Edit User">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a href="@Url.Action("ClaimsManagement", new { userId = user.Id })" 
                                               class="btn btn-sm btn-outline-info" title="Manage Claims">
                                                <i class="fas fa-key"></i>
                                            </a>
                                            @if (user.LockoutEnd != null && DateTimeOffset.Parse(user.LockoutEnd.ToString()) > DateTimeOffset.UtcNow)
                                            {
                                                <form method="post" action="@Url.Action("UnlockUser")" class="d-inline">
                                                    <input type="hidden" name="userId" value="@user.Id" />
                                                    <button type="submit" class="btn btn-sm btn-outline-success" 
                                                            title="Unlock User" onclick="return confirm('Are you sure you want to unlock this user?')">
                                                        <i class="fas fa-unlock"></i>
                                                    </button>
                                                    @Html.AntiForgeryToken()
                                                </form>
                                            }
                                            else
                                            {
                                                <form method="post" action="@Url.Action("LockoutUser")" class="d-inline">
                                                    <input type="hidden" name="userId" value="@user.Id" />
                                                    <button type="submit" class="btn btn-sm btn-outline-danger" 
                                                            title="Lock Out User" onclick="return confirm('Are you sure you want to lock out this user?')">
                                                        <i class="fas fa-lock"></i>
                                                    </button>
                                                    @Html.AntiForgeryToken()
                                                </form>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center text-muted py-5">
                    <i class="fas fa-users fa-3x mb-3"></i>
                    <p>No users found.</p>
                </div>
            }
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">